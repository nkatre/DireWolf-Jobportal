<%- model_class = Job -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:tag1) %></th>
      <th><%= model_class.human_attribute_name(:tag2) %></th>
      <th><%= model_class.human_attribute_name(:tag3) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:deadline) %></th>
      <th><%= model_class.human_attribute_name(:employer_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.id, job_path(job) %></td>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.tag1 %></td>
        <td><%= job.tag2 %></td>
        <td><%= job.tag3 %></td>
        <td><%= job.category %></td>
        <td><%= job.deadline %></td>
        <td><%= job.employer_id%></td>
        <td>


          <%= link_to t('.show', :default => t("helpers.links.show")),
                      job_path(job), :class => 'btn btn-default btn-xs' %>

          <% if((cookies[:employerID]!="") && (!cookies[:employerID].is_a?NilClass)) %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_job_path(job), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      job_path(job),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>

          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if((cookies[:employerID]!="") && (!cookies[:employerID].is_a?NilClass)) %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_job_path,
            :class => 'btn btn-primary' %>
<% end %>
