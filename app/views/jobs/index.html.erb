<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Title</th>
      <th>Description</th>
      <th>Tag1</th>
      <th>Tag2</th>
      <th>Tag3</th>
      <th>Category</th>
      <th>Deadline</th>
      <th>Employer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job_id %></td>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.tag1 %></td>
        <td><%= job.tag2 %></td>
        <td><%= job.tag3 %></td>
        <td><%= job.category %></td>
        <td><%= job.deadline %></td>
        <td><%= job.employer_id %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

