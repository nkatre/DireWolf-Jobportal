<%- model_class = Jobseeker -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @jobseeker.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @jobseeker.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:password) %>:</strong></dt>
  <dd><%= @jobseeker.password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @jobseeker.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:skills) %>:</strong></dt>
  <dd><%= @jobseeker.skills %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resume) %>:</strong></dt>
  <dd><%= @jobseeker.resume %></dd>
</dl>

<%# link_to t('.back', :default => t("helpers.links.back")),
              jobseekers_path, :class => 'btn btn-default'  %>
<% if((cookies[:jobseekerID]!="") && (!cookies[:jobseekerID].is_a?NilClass)) %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_jobseeker_path(@jobseeker), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              jobseeker_path(@jobseeker),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to "View Jobs",root_path, :class => 'btn btn-primary'%>
<%= link_to "View Recommended Jobs",recommended_path, :class => 'btn btn-primary'%>
<%= link_to "View My Applications",view_my_applications_path, :class => 'btn btn-primary'%>
<% end %>