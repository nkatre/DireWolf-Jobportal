<%= form_for @jobapplication, :html => {:class => "form-horizontal jobapplication"} do |f| %>

    <% if @jobapplication.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@jobapplication.errors.count, "error") %> prohibited this
              jobapplication from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @jobapplication.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <% if ((cookies[:jobseekerID]!="") &&(!cookies[:jobseekerID].is_a?NilClass))  %>
    <div class="control-group">
      <%= f.label :coverletter, :class => 'control-label' %>

      <div class="controls">
        <%= f.text_area :coverletter, :class => 'form-control' %>
      </div>

      <%= f.label :status, :class => 'control-label' %>

      <div class="controls">
        <%= f.hidden_field :status %>
      </div>

    </div>

    <% end %>


    <% if ((cookies[:employerID]!="") &&(!cookies[:employerID].is_a?NilClass))  %>
    <div class="control-group">
      <%= f.label :status, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :status, :class => 'form-control' %>
      </div>
      <%# error_span(@jobapplication[:coverletter]) %>
    </div>
        <% end %>



    <div class="control-group">



      <div class="controls">
        <%= f.hidden_field :job_id %>
      </div>
      <div class="controls">
        <%= f.hidden_field :jobseeker_id %>
      </div>

    </div>


    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                jobapplications_path, :class => 'btn btn-default' %>

<% end %>
