<%- model_class = Employer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
  <dd><%= @employer.company_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_name) %>:</strong></dt>
  <dd><%= @employer.contact_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @employer.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:password) %>:</strong></dt>
  <dd><%= @employer.password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:admin_id) %>:</strong></dt>
  <dd><%= @employer.admin_id %></dd>
</dl>

<%# link_to t('.back', :default => t("helpers.links.back")),
              employers_path, :class => 'btn btn-default'  %>
<% if((cookies[:adminID]!="") && !(cookies[:adminID].is_a?NilClass)) %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employer_path(@employer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employer_path(@employer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% elsif((cookies[:employerID]!="") && (!cookies[:employerID].is_a?NilClass)) %>
    <%= link_to "Create Jobs",new_job_path, :class => 'btn btn-primary'%>
    <%= link_to "View Job Applications", jobapps_path(:employer_id=>@employer.id) , :class => 'btn btn-primary'%>
    <%= link_to "Change Job Application Status", jobapps_path(:employer_id => @employer.id) , :class => 'btn btn-primary' %>
<% end %>