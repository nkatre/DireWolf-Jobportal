<% def error_span(attribute) %>

<% end    %>

<%= form_for @admin, :html => { :class => "form-horizontal admin" } do |f| %>

    <% if @admin.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@admin.errors.count, "error") %> prohibited this admin from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @admin.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <%= error_span(@admin[:name]) %>
    </div>
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, :class => 'form-control' %>
      </div>
      <%= error_span(@admin[:email]) %>
    </div>
    <div class="control-group">
      <%= f.label :password, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'form-control' %>
      </div>
      <%= error_span(@admin[:password]) %>
    </div>


    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admins_path, :class => 'btn btn-default' %>

<% end %>
