<%- model_class = Admin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @admin.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @admin.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:password) %>:</strong></dt>
  <dd><%= @admin.password %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admins_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_path(@admin), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_path(@admin),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to "Create Other Admins",new_admin_path, :class => 'btn btn-primary'%>
<% if((cookies[:adminID]!="") && (!cookies[:adminID].is_a?NilClass)) %>
    <%= link_to "Create Employer",new_employer_path, :class => 'btn btn-primary'%>
    <%= link_to "Create Category",new_category_path, :class => 'btn btn-primary'%>
<% end %>